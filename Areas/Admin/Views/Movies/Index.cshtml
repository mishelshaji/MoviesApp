@model IEnumerable<Movie>
@{
    ViewData["Title"] = "Index";
}

<h1>Movie List</h1>

<div class="d-flex">
    <a asp-action="Create" class="btn btn-success ms-auto my-2">+ Add movie</a>
</div>

<div class="container-fluid">
    @if(Model.Any()){
        <div class="row gap-5">
            @foreach (var item in Model)
            {
                <div class="card col-sm-3 shadow">
                    <img src="https://dummyimage.com/500x500/f2f2f2/5e5e5e&text=@item.Title" class="card-img-top" alt="">
                    <div class="card-body">
                        <h2>@item.Title</h2>
                        <p>@item.Summary</p>
                    </div>
                    <div class="card-footer d-flex">
                        <div class="btn-group ms-auto">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Do you want to delete this movie?')">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else{
        <div class="alert alert-info">
            No movies were found. Please
            <a asp-action="Create" class="alert-link">Add a movie</a> first.
        </div>
    }

